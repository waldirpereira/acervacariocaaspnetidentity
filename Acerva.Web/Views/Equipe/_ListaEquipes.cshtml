<div class="panel panel-primary">
    <div class="panel-heading">Equipes</div>
    <div class="panel-body">
        <div class="row">
            <table id="tabelaEquipes"
                   dt-multifiltering="multifiltering" class="table table-bordered table-striped table-responsive table-hover table-condensed">
                <thead>
                <tr>
                    <th style="width: 70px;">Código</th>
                    <th style="width: 150px;">Escudo</th>
                    <th style="width: 60px;">Sigla</th>
                    <th>Nome</th>
                    <th class="sorting_disabled" style="width: 60px;"></th>
                </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="m in listaCtrl.listaEquipes track by m.codigo">
                        <td>
                            <input type="hidden" value="{{('0000000000'+m.codigo).slice(-10)}}"/>
                            <a title="Editar Equipe"
                               ng-href="#/Edit/{{m.codigo}}">{{m.codigo}}</a>
                        </td>
                        <td>
                            <img ng-src="@Url.Content("~/Content/Aplicacao/images/escudos/"){{m.escudo}}" height="15"/>
                            {{m.escudo}}
                        </td>
                        <td>{{m.sigla}}</td>
                        <td><a title="Editar Equipe"
                               ng-href="#/Edit/{{m.codigo}}">{{m.nome}}</a></td>

                        <td style="padding: 4px;">
                            <a class="btn btn-info btn-xs" title="Editar {{ m.nome }}"
                               href="#/Edit/{{m.codigo}}">
                                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                            </a>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
    <div class="panel-footer">
        <div class="row">
            <div class="col-sm-12">
                <div class="pull-right">
                    <a class="btn btn-primary" href="#/Create">Nova equipe</a>
                </div>
            </div>
        </div>
    </div>
</div>