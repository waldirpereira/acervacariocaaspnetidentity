<div class="panel panel-primary">
    <div class="panel-heading">ACervAs</div>
    <div ng-show="listaCtrl.status.carregando" class="text-center"><div class="loader"></div></div>
    <div ng-hide="listaCtrl.status.carregando">
        <div class="panel-body">
            <div class="row hidden-xs">
                <table id="tabelaAcervas"
                       datatable="ng" dt-disable-deep-watchers="true"
                       dt-options="{paging: false, lengthChange: false, info: false, searching: false }"
                       class="table table-bordered table-striped table-responsive table-hover table-condensed">
                    <thead>
                        <tr>
                            <th>Regional</th>
                            <th>Nome</th>
                            <th style="width: 120px;">Participantes</th>
                            @if (User.IsInRole("ADMIN"))
                            {
                                <th style="width: 40px;">Ativo?</th>
                                    <th class="sorting_disabled" style="width: 60px;"></th>
                            }
                        </tr>
                    </thead>
                    <tbody>
                        <tr ng-repeat="m in listaCtrl.listaMinhasAcervas track by m.codigo">
                            <td>{{m.regional.nome}}</td>
                            <td>
                                <a title="Editar ACervA"
                                   ng-href="@Url.Action("Index", "MinhaAcerva")/#/Edit/{{m.codigo}}">{{m.nome}}</a>
                            </td>
                            <td>
                                <input type="hidden" value="{{('0000000000'+m.participacoes.length).slice(-10)}}" />
                                {{m.participacoes.length}}
                            </td>
                            @if (User.IsInRole("ADMIN"))
                            {
                                <td>
                                    <input type="hidden" ng-value="!m.ativo" />
                                    <span class="label label-success" ng-if="m.ativo">Sim</span>
                                    <span class="label label-danger" ng-if="!m.ativo">Não</span>
                                </td>

                                    <td style="padding: 4px;">
                                        <a class="btn btn-info btn-xs" title="Editar {{ m.nome }}"
                                           ng-if="m.ativo"
                                           href="#/Edit/{{m.codigo}}">
                                            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                                        </a>
                                        <a class="btn btn-default btn-xs" title="Visualizar {{ m.nome }}"
                                           ng-if="!m.ativo"
                                           href="#/Edit/{{m.codigo}}">
                                            <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>
                                        </a>

                                        <button type="button" class="btn btn-success btn-xs" title="Ativar {{ m.nome }}"
                                                acerva-confirm
                                                ng-if="!m.ativo"
                                                confirm-action="listaCtrl.ativa(m)"
                                                confirm-window-type="success"
                                                confirm-text="Confirma a ativação da ACervA Carioca {{ m.nome }}?">
                                            <span class="glyphicon glyphicon-ok" aria-hidden="true"></span>
                                        </button>
                                        <button type="button" class="btn btn-danger btn-xs" title="Inativar {{ m.nome }}"
                                                acerva-confirm
                                                ng-if="m.ativo"
                                                confirm-action="listaCtrl.inativa(m)"
                                                confirm-window-type="danger"
                                                confirm-text="Confirma a inativação da ACervA Carioca {{ m.nome }}?">
                                            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                                        </button>
                                    </td>
                            }
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="row visible-xs">
                <table class="table table-bordered table-striped table-responsive table-hover table-condensed visible-xs" style="width: 100%;">
                    <thead>
                        <tr>
                            <th>ACervA Carioca</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr ng-repeat="m in listaCtrl.listaMinhasAcervas track by m.codigo" style="margin-bottom: 5px;">
                            <td>
                                <strong>
                                    <a title="Editar ACervA"
                                       ng-href="@Url.Action("Index", "MinhaAcerva")/#/Edit/{{m.codigo}}">{{m.nome}}</a>
                                </strong>
                                @if (User.IsInRole("ADMIN"))
                                {
                                    <span class="label label-success pull-right" ng-if="m.ativo">ativo</span>
                                        <span class="label label-danger pull-right" ng-if="!m.ativo">inativo</span>
                                }
                                <br />
                                <dfn>{{m.regional.nome}}</dfn><br />
                                <dfn>{{m.participacoes.length}} participante{{m.participacoes.length > 1 ? 's' : ''}}</dfn>

                                @if (User.IsInRole("ADMIN"))
                                {
                                    <br />
                                        <a class="btn btn-info btn-xs" title="Editar {{ m.nome }}"
                                           ng-if="m.ativo"
                                           href="#/Edit/{{m.codigo}}">
                                            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                                        </a>
                                        <a class="btn btn-default btn-xs" title="Visualizar {{ m.nome }}"
                                           ng-if="!m.ativo"
                                           href="#/Edit/{{m.codigo}}">
                                            <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>
                                        </a>

                                        <button type="button" class="btn btn-success btn-xs" title="Ativar {{ m.nome }}"
                                                acerva-confirm
                                                ng-if="!m.ativo"
                                                confirm-action="listaCtrl.ativa(m)"
                                                confirm-window-type="success"
                                                confirm-text="Confirma a ativação da ACervA Carioca {{ m.nome }}?">
                                            <span class="glyphicon glyphicon-ok" aria-hidden="true"></span>
                                        </button>
                                        <button type="button" class="btn btn-danger btn-xs" title="Inativar {{ m.nome }}"
                                                acerva-confirm
                                                ng-if="m.ativo"
                                                confirm-action="listaCtrl.inativa(m)"
                                                confirm-window-type="danger"
                                                confirm-text="Confirma a inativação da ACervA Carioca {{ m.nome }}?">
                                            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                                        </button>
                                }
                            </td>
                        </tr>
                </table>
            </div>
        </div>
        <div class="panel-footer">
            <div class="row">
                <div class="col-sm-12">
                    <div class="pull-right">
                        <a class="btn btn-primary" href="#/Create">Criar nova ACervA Carioca</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>