<div class="panel panel-primary">
    <div class="panel-heading">Associados</div>
    <div class="panel-body">
        <div class="row hidden-xs">
            <table id="tabelaUsuarios"
                   datatable="ng" dt-disable-deep-watchers="true"
                   dt-multifiltering="multifiltering" class="table table-bordered table-striped table-responsive table-hover table-condensed">
                <thead>
                    <tr>
                        <th>Nome</th>
                        <th style="width: 120px;">E-mail</th>
                        <th style="width: 60px;">Regional</th>
                        <th class="sorting_disabled" style="width: 60px;"></th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="m in listaCtrl.listaUsuarios track by m.id">
                        <td>
                            <a title="Editar associado"
                               ng-href="#/Edit/{{m.id}}">{{m.name}}</a>
                        </td>
                        <td>{{m.email}}</td>
                        <td>{{m.regional.nome}}</td>

                        <td style="padding: 4px;">
                            <a class="btn btn-info btn-xs" title="Editar {{ m.name }}"
                               href="#/Edit/{{m.id}}">
                                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                            </a>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="row visible-xs">
            <table class="table table-bordered table-striped table-responsive table-hover table-condensed visible-xs" style="width: 100%;">
                <thead>
                    <tr>
                        <th>Associado</th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="m in listaCtrl.listaUsuarios track by m.id" style="margin-bottom: 5px;">
                        <td>
                            <strong>
                                <a title="Editar associado"
                                   ng-href="#/Edit/{{m.id}}">{{m.name}}</a>
                            </strong>
                            <span class="label label-primary">
                                {{m.regional.nome}}
                            </span>
                            <br/>
                            <i>{{m.email}}</i>
                            <br/>
                            <a class="btn btn-info btn-xs" title="Editar {{ m.name }}"
                               href="#/Edit/{{m.id}}">
                                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                            </a>
                        </td>
                    </tr>
            </table>
        </div>
    </div>
    <div class="panel-footer">
        <div class="row">
            <div class="col-sm-12">
                <div class="pull-right">
                    <a class="btn btn-primary" href="#/Create">Novo associado</a>
                </div>
            </div>
        </div>
    </div>
</div>