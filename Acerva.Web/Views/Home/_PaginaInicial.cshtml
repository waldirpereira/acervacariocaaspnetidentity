@{
    ViewBag.Title = "Bem vindo ao site da ACervA Carioca!";
}
<h3>@ViewBag.Title</h3>

<div class="container-noticias" ng-repeat="noticia in ctrl.listaNoticias ">
    <h4 class="titulo text-primary"><span class="glyphicon glyphicon-triangle-right" aria-hidden="true"></span> {{noticia.titulo}}</h4>
    <span ng-bind-html="noticia.textoHtml"></span>
    <div ng-if="noticia.anexos.length > 0">
        <hr />
        <h5>Anexos</h5>
        <ul>
            <li ng-repeat="anexo in noticia.anexos" style="margin-bottom: 10px;">
                <a ng-href="@Url.Content("~/Content/Aplicacao/anexos/noticias/")/{{noticia.codigo}}/{{anexo.nomeArquivo}}" target="_new">{{anexo.titulo}}</a>
            </li>
        </ul>
    </div>
</div>